{
    "name": "stardex-infrastructure",
    "version": "0.1.0",
    "bin": {
        "infrastructure": "bin/app.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "cdk": "cdk",
        "bootstrap:aws": "cdk bootstrap",
        "bootstrap:stack": "cdk deploy prod-stardex-bootstrap --require-approval never",
        "bootstrap": "pnpm bootstrap:aws && pnpm bootstrap:stack",
        "deploy:dns": "cdk deploy prod-stardex-dns --require-approval never",
        "deploy:stardex": "cdk deploy prod-stardex-stardex --require-approval never",
        "deploy:deployment": "cdk deploy prod-stardex-deployment --require-approval never",
        "deploy:all": "cdk deploy --all --require-approval never",
        "deploy:update": "cdk deploy prod-stardex-stardex --require-approval never",
        "destroy:bootstrap": "cdk destroy prod-stardex-bootstrap --force",
        "destroy:all": "cdk destroy --all --force",
        "diff": "cdk diff",
        "synth": "cdk synth",
        "list": "cdk list",
        "layer:create": "mkdir -p layer-base/python && mkdir -p layer-ml/python",
        "layer:install-api": "pip install -r ../backend/requirements-layer.txt -t layer-base/python --no-cache-dir",
        "layer:install-ml": "pip install -r ../backend/requirements-ml.txt -t layer-ml/python --no-cache-dir",
        "layer:install": "npm run layer:install-api && npm run layer:install-ml",
        "layer:deploy": "cdk deploy LambdaLayerStack --require-approval never && cdk deploy \"*BackendNested*\" --require-approval never",
        "layer:update": "npm run layer:create && npm run layer:install && npm run layer:deploy",
        "layer:clean": "rm -rf layer-base layer-ml",
        "layer:sync-deps": "cd ../backend && poetry install && poetry run pip freeze > requirements-all.txt && poetry run pip freeze | grep -v \"scikit-learn\" > requirements-layer.txt && poetry run pip freeze | grep \"scikit-learn\" > requirements-ml.txt && rm requirements-all.txt"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.7.1",
        "aws-cdk": "^2.173.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.2.2"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.173.0",
        "constructs": "^10.4.0",
        "source-map-support": "^0.5.21"
    }
}