{
    "name": "stardex-infrastructure",
    "version": "0.1.0",
    "bin": {
        "infrastructure": "bin/app.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "cdk": "cdk",
        "bootstrap:aws": "cdk bootstrap",
        "bootstrap:stack": "cdk deploy prod-stardex-bootstrap --require-approval never",
        "bootstrap": "pnpm bootstrap:aws && pnpm bootstrap:stack",
        "deploy:dns": "cdk deploy prod-stardex-dns --require-approval never",
        "deploy:storage": "cdk deploy prod-stardex-storage --require-approval never",
        "deploy:backend": "cdk deploy prod-stardex-backend --require-approval never",
        "deploy:deployment": "cdk deploy prod-stardex-deployment --require-approval never",
        "deploy:monitoring": "cdk deploy prod-stardex-monitoring --require-approval never",
        "deploy:all": "cdk deploy --all --require-approval never",
        "deploy:update": "cdk deploy prod-stardex-{storage,backend,deployment,monitoring} --require-approval never",
        "destroy:bootstrap": "cdk destroy prod-stardex-bootstrap --force",
        "destroy:all": "cdk destroy --all --force",
        "diff": "cdk diff",
        "synth": "cdk synth",
        "list": "cdk list"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.7.1",
        "aws-cdk": "^2.173.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.2.2"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.173.0",
        "constructs": "^10.4.0",
        "source-map-support": "^0.5.21"
    }
}